                <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.four_thirty_pm || nil%> seats available</div>
                <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.five_thirty_pm || nil%> seats available</div>
                <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.six_thirty_pm || nil%> seats available</div>
                <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.seven_thirty_pm || nil %> seats available</div><br>
              </small>
            </div>
          <% end %>
      </div>
      <div style="padding-left:0px;font-weight:bold"><small>Enter Number of Participants</small></div>
      <div class="row">
        <div style="padding-left:20px;"><small>600 ft. - $65 per person </small><%= reservation.input_field :six_hundred, collection: 0..15, default: 0, :input_html => {:style => 'width: 25%'} %></div>
        <div style="padding-left:20px;"><small>800 ft. - $75 per person </small><%= reservation.input_field :eight_hundred, collection: 0..15, default: 0, :input_html => {:style => 'width: 25%'} %></div>
      </div><br>
      <span style="padding-left:0px;font-weight:bold"><small>Number of Photo Packages</small></span>
      <div style="padding-left:10px;"><small>$30 each </small><%= reservation.input_field :photo, collection: 0..5, default: 0, :input_html => {:style => 'width: 25%'} %></div><br>
      <span style="padding-left:0px;font-weight:bold"><small>Discount Code</small></span>
      <%= reservation.input :date, :as => :hidden, input_html: { value: @playday.date } %>
      <% if current_user.standard? %>
        <%= reservation.input :customer_first_name, :as => :hidden, input_html: { value: current_user.firstname} %>
        <%= reservation.input :customer_last_name, :as => :hidden, input_html: { value: current_user.lastname } %>
        <%= reservation.input :customer_phone_number, :as => :hidden, input_html: { value: current_user.phone} %>
        <%= reservation.input :customer_email, :as => :hidden, input_html: { value: current_user.email} %>
      <% end %>
      <div><%= reservation.input_field :discount, placeholder: "Only one code allowed", :input_html => {:style => 'width: 65%'}%></div>
      <% if current_user.admin? %>
        <small><br>
          <%= reservation.input :customer_email, :input_html => {:style => 'width: 35%'} %>
          <%= reservation.input :customer_first_name, :input_html => {:style => 'width: 35%'} %>
          <%= reservation.input :customer_last_name, :input_html => {:style => 'width: 35%'} %>
          <%= reservation.input :customer_phone_number, :input_html => {:style => 'width: 35%'} %>
        </small>
      <% end %>
      <small><%= reservation.input :comments, :input_html => {:style => 'width: 35%'} %></small>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Parasail Reservation"
        data-panel-label="Enter Card Info"
        data-label="Continue"
        </script>
    <% end %>
    <br><span style="color:white"><small>* You will not be charged at this time.
    See 'Policies' for more info.</small></span>
    </div>
  </div>
</div>
<% end %>
