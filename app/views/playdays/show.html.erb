<% if current_user.present? %>
  <div style="float:left;width: 1000px;height: 1200px;border: 2px solid black;border-radius: 25px;
    background: url('http://s3-media4.fl.yelpcdn.com/bphoto/I5Onv6J6-CbFvJhA1OyiiA/o.jpg') no-repeat center center fixed;
		-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;">
    <div style="padding-left:30px">
      <h3 style="color:white">Make a Reservation!</h3>
      <h4 style="padding-left:25px;color:white"><%= (Date.strptime(@playday.date, '%m-%d-%Y')).strftime("%A, %B %d") %></h4>
      <div class="row">
        <div style="padding-left:20px; padding-top:10px">
          <span style="color:black;font-weight:bold;">Date
            <%= form_for :playday, :defaults => {:required => false},url: :playdays do |f| %>
              <%= f.text_field :date, placeholder: "Pick Date", label: false %>
            <% end %>
          </span>
        </div>
      </div>
      <% if current_user.admin? %><br>
        <%= link_to "Edit Availabilities", edit_playday_path(@playday), class: 'btn btn-success btn-xs' %><br>
      <% end %>
      <%= simple_form_for @reservation, validate: true do |reservation| %><br>
        <span style="color:black"><small><strong>Time<br></strong></small></span>
        <div class="row">
          <div style="float:left; padding-left:20px;color:black">
            <small><%= reservation.input_field :time, as: :radio_buttons, collection: ["8 am","9 am","10 am", "11 am", "12 pm", "1 pm", "2 pm","3 pm", "4 pm", "5 pm", "6 pm", "7 pm"], checked: "" %></small>
          </div>
          <div style="float:left; padding-left:5px">
            <small>
              <div style="padding-top: 10px; color: black"> &nbsp&nbsp <%= @playday.eight_am || nil%> seats available</div>
              <div style="padding-top: 9px; color: black"> &nbsp&nbsp <%= @playday.nine_am || nil%> seats available </div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.ten_am || nil %> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.eleven_am || nil%> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.twelve_pm || nil%> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.one_pm || nil%> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.two_pm || nil%> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.three_pm || nil%> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.four_pm || nil%> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.five_pm || nil%> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.six_pm || nil%> seats available</div>
              <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.seven_pm || nil %> seats available</div><br>
            </small>
          </div>
          <% unless @playday.dirty_thirties_off? %>
            <div style="float:left; padding-left:40px">
              <small><%= reservation.input_field :time, as: :radio_buttons, collection: ["830 am","930 am","1030 am", "1130 am", "1230 pm", "130 pm", "230 pm","330 pm", "430 pm", "530 pm", "630 pm", "730 pm"], checked: "" %></small>
            </div>
            <div style="float:left; padding-left:5px">
              <small>
                <div style="padding-top: 10px; color: black"> &nbsp&nbsp <%= @playday.eight_thirty_am || nil%> seats available</div>
                <div style="padding-top: 9px; color: black"> &nbsp&nbsp <%= @playday.nine_thirty_am || nil%> seats available </div>
                <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.ten_thirty_am || nil %> seats available</div>
                <div style="padding-top: 8px; color: black"> &nbsp&nbsp <%= @playday.eleven_thirty_am || nil%> seats available</div>
